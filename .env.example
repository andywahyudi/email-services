# Email Provider Configuration
DEFAULT_EMAIL_PROVIDER=mailgun

# Email Service API Keys

# SendGrid API Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here

# SendGrid SMTP Configuration
SENDGRID_USE_SMTP=true
SENDGRID_SMTP_HOST=smtp.sendgrid.net
SENDGRID_SMTP_PORT=587
# Note: SendGrid uses 'apikey' as username and API key as password

# Mailgun API Configuration
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_domain_here
MAILGUN_FROM_ADDRESS=your_from_address@domain.com

# Mailgun SMTP Configuration
MAILGUN_USE_SMTP=true
MAILGUN_SMTP_HOST=smtp.mailgun.org
MAILGUN_SMTP_PORT=587
MAILGUN_SMTP_USERNAME=your_smtp_username
MAILGUN_SMTP_PASSWORD=your_smtp_password

# Postmark API Configuration
POSTMARK_SERVER_TOKEN=your_postmark_server_token_here

# Postmark SMTP Configuration
POSTMARK_USE_SMTP=true
POSTMARK_SMTP_HOST=smtp.postmarkapp.com
POSTMARK_SMTP_PORT=587
POSTMARK_SMTP_USERNAME=your_server_token
# Note: Postmark uses the API token as the SMTP password

